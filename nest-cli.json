{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "sourceRoot": "apps/api/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "backend-services": {
      "type": "application",
      "root": "apps/backend-services",
      "sourceRoot": "apps/backend-services/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/backend-services/tsconfig.app.json"
      }
    }
  }
}
